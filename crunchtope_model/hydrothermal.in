TITLE
Hydrothermal Fluid Flow in a 1D model
END

RUNTIME
time_units                   years
timestep_max                 2e-2
timestep_init                1e-40
time_tolerance               0.1
correction_max               5.0
debye-huckel                 true
database_sweep               false
speciate_only                false
screen_output                50
hindmarsh                    true
gimrt                        true
master                       H+
database                     CrunchThermoddem.dbs
graphics                     tecplot
save_restart                 partial_equil.rst
END

DISCRETIZATION
distance_units               meters
xzones                       500   2.0
END

OUTPUT
time_units                   years
spatial_profile              1e-1 100 200 300 400 500 600 700 800 900 1000
END

CONDITION                    Initial
!Seawater composition
units                        mmol/kg
pH                           8.15  
temperature                  2.0
Na+                          474
Cl-                          charge
Mg++                         52.8
SO4--                        28.2
Ca++                         10.3
K+                           10.2
HCO3-                        2.06
Al+++                        0.037e-6   
Fe+++                        1.0e-6
Fe++                         1.0e-12
O2(aq)                       1.0e-15
SiO2(aq)                   0.17

! SOLID PHASE
!porosity = 0.1, total solid phase = 0.9

! Primary minerals
! Primary minerals
!olivine, total (40%) Fo85 (Ben's paper)
Forsterite           0.0415    ssa 1d-6  
Fayalite             0.0070    ssa 1d-6  

!CPX Di85 He1
Diopside             0.315     ssa 1d-6  
Hedenbergite         0.050     ssa 1d-6  

!plagioclase An
Anorthite            0.3825    ssa 1d-6  
Albite               0.1625    ssa 1d-6  

! Secondary minerals
!amphibole
Tremolite            1.0e-10   ssa 5d-3  1.0e-10

!serpentine
Chrysotile           1.0E-10   ssa 5d-3  1.0e-10
Talc                 1.0E-10   ssa 5d-3  1.0e-10

! Oxides
!Hematite             1.0E-10  ssa 5d-3  1.0e-10

Quartz               1.0E-10   ssa 5d-3  1.0e-10

! Mica
Annite               1.0E-10   ssa 5d-3  1.0e-10

!smectite
Saponite_Mg          1.0E-10   ssa 5d-3  1.0e-10
Saponite_FeMg        1.0E-10 ssa   5d-3  1.0e-10

! Illite
Illite_Mg           1.0e-10    ssa 5d-3  1.0e-10

!Epidotes                                1.0e-10
Epidote              1.0e-10   ssa 5d-3  1.0e-10
Zoisite              1.0e-10   ssa 5d-3  1.0e-10

!Chlorite
Chamosite-7A         1.0e-10   ssa 5d-3  1.0e-10
Clinochlore-7A       1.0e-10   ssa 5d-3  1.0e-10

!Na-Zeolites                             1.0e-10
Analcime             1.0e-10   ssa 5d-3  1.0e-10

!Hydroxide
Gibbsite             1.0E-10   ssa 5d-3  1.0e-10
Diaspore             1.0E-10   ssa 5d-3  1.0e-10

!Sulphate
Anhydrite            1.0E-10   ssa 5d-3  1.0e-10

!Carbonate
Calcite              1.0E-10   ssa 5d-3  1.0e-10
END

CONDITION                    Boundary
!Seawater composition
units                        mmol/kg
pH                           8.15  
temperature                  2.0
Na+                          474
Cl-                          charge
Mg++                         52.8
SO4--                        28.2
Ca++                         10.3
K+                           10.2
HCO3-                        2.06
Al+++                        0.037e-6
Fe+++                        1.0e-6
Fe++                         1.0e-12
O2(aq)                       1.0e-15
SiO2(aq)                   0.17
END

