CO2(g)
END
 
BOUNDARY_CONDITIONS
x_begin   Boundary     flux
x_end     Boundary     flux
END

FLOW
distance_units meters
time_units   years
constant_flow  2
END

TEMPERATURE
read_temperaturefile     on_axis_temp.txt
END

TRANSPORT
distance_units centimeters
time_units  seconds
calculate_diffusion 0.919e-05
!diffusion_activation  4.5
!cementation_exponent  2.0
!dispersivity   0.004
END
